<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/start_second_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start SecondActivity"
        android:textSize="25sp" />

    <Button
        android:id="@+id/start_second_activity_default_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start SecondActivity By Default"
        android:textSize="25sp" />

    <Button
        android:id="@+id/request_multiple_permissions_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Multiple Permissions"
        android:textSize="25sp" />
</LinearLayout>